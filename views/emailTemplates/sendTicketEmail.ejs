<!-- ===== E-Jagruti • Ticket Created (same style as Resolved) ===== -->
<table width="100%" cellpadding="0" cellspacing="0" role="presentation" style="margin:0; padding:0; background:#f6f7fb; font-family:Arial, 'Helvetica Neue', Helvetica, sans-serif;">
  <tr>
    <td align="center" style="padding:0;">

      <!-- Header (gradient bar with emblem + brand) -->
      <table width="100%" cellpadding="0" cellspacing="0" role="presentation" style="max-width:600px;">
        <tr>
          <td style="
            background: linear-gradient(135deg,#ffb057 0%, #ff7a1a 45%, #ff5e00 100%);
            border-top-left-radius:12px;border-top-right-radius:12px;
            padding:14px 18px; color:#fff;">
            <table width="100%" cellpadding="0" cellspacing="0" role="presentation">
              <tr>
                <td valign="middle" style="white-space:nowrap;">
                  <img src="https://pbs.twimg.com/media/FoxpyFJacAQBdcZ.png" width="28" height="28" alt="Emblem" style="display:inline-block; border:0; vertical-align:middle;">
                  <span style="margin-left:8px; font-size:16px; line-height:1; vertical-align:middle;">
                    Government of India
                  </span>
                </td>
                <td align="right" valign="middle">
                  <span style="font-size:22px; font-weight:700; color:#b40000; background:#fff; padding:4px 10px; border-radius:6px; display:inline-block;">
                    E-Jagruti
                  </span>
                </td>
              </tr>
            </table>
          </td>
        </tr>
      </table>

      <!-- Card -->
      <table class="es-content-body" cellspacing="0" cellpadding="0" bgcolor="#ffffff" align="center" role="none"
             style="border-collapse:collapse; width:600px; background-color:#ffffff; border-bottom-left-radius:12px; border-bottom-right-radius:12px; box-shadow:0 6px 18px rgba(0,0,0,0.12);">
        <tr>
          <td align="left" style="padding:26px 30px 18px 30px; font-size:16px; color:#222; line-height:26px;">

            <!-- Greeting -->
            <p style="margin:0 0 14px 0; font-size:18px; color:#0b1d39; font-weight:bold;">
              Hi <strong><%= name %></strong>,
            </p>

            <!-- Ticket creation message -->
            <p style="margin:0 0 14px 0;">
              Your support ticket has been <strong style="color:#ff7a1a;">created successfully</strong>.
              The ticket <strong style="color:#ff7a1a;">ID <%= ticketId %></strong> is now open under the topic
              <strong style="color:#ff7a1a;"><%= topic %></strong>.
            </p>

            <!-- Submitted query -->
            <p style="margin:0 0 8px 0; font-weight:bold; color:#0b1d39;">
              Your Query:
            </p>
            <div style="margin:0 0 16px 0; background:#f9fbff; border:1px solid #dde7ff; padding:12px 14px; border-radius:10px; color:#333;">
              <em style="font-style:italic; color:#2c3e50;"><%= resolution %></em>
            </div>

            <!-- Next steps / info -->
            <div style="margin:16px 0; background:#fff8f3; border:1px solid #ffd7bf; padding:12px 14px; border-radius:10px; color:#444;">
              Our team is reviewing your request. You'll receive updates via email as we progress.
              If you need to add more details or attachments, just reply to this email and they’ll be linked to your ticket.
            </div>

            <!-- Thanks -->
            <p style="margin:0 0 14px 0;">
              Thank you for contacting E-Jagruti Support.
            </p>

            <!-- Closing remarks -->
            <p style="margin:0;">
              Warm regards,<br>
              <strong>E-Jagruti Support Team</strong>
            </p>
          </td>
        </tr>

        <!-- Footer -->
        <tr>
          <td align="center" style="padding:10px 0 18px 0;">
            <p style="margin:0; font-size:12px; color:#8a8a8a;">
              &copy; 2025 E-Jagruti. All Rights Reserved.
            </p>
          </td>
        </tr>
      </table>

      <!-- Bottom spacer -->
      <table width="100%" cellpadding="0" cellspacing="0" role="presentation" style="max-width:600px;">
        <tr><td style="height:28px; line-height:28px; font-size:0;">&nbsp;</td></tr>
      </table>

    </td>
  </tr>
</table>
